<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VDiskFileActivity" >

    <ImageButton
        android:id="@+id/cloud_qry_button"
        android:layout_width="46dip"
        android:layout_height="46dip"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dip"
        android:src="@drawable/query" />

    <EditText
        android:id="@+id/cloud_path_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cloud_qry_button"
        android:layout_toLeftOf="@id/cloud_qry_button"
        android:drawableLeft="@drawable/edit"
        android:drawablePadding="1dip"
        android:padding="2px"
        android:textColor="@drawable/black"
        android:textSize="20sp" >
    </EditText>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cloud_qry_button"
        android:longClickable="true" >
    </ListView>

</RelativeLayout>